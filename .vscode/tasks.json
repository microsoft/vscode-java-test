{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "npm",
            "type": "shell",
            "command": "npm",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "args": [
                "run",
                "compile",
                "--loglevel",
                "silent"
            ],
            "isBackground": true,
            "presentation": {
                "reveal": "silent"
            },
            "problemMatcher": "$tsc-watch"
        }
    ]
}